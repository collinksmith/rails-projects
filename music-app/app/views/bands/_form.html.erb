<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>
<% text = (band.persisted? ? "Update Band" : "Create Band") %>

<form action="<%= action %>" method="post">
  <%= method_hack(method) %>
  <%= auth_token %>
  
  <label for="band_name">Name</label>
  <input type="text" name="band[name]" value="<%= band.name %>" id="band_name">

  <input type="submit" value="<%= text %>">
</form>