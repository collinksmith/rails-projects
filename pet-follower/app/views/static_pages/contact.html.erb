<h1>Contact</h1>

<div class="row">
  <div class="col-xs-3">
    <form action="/links" method="post">
      <div class="form-group">
        <label for="contact_name">Full Name</label>
        <br>
        <input type="text"
               name="contact[name]"
               id="contact_name"
               class="form-control">
        <br>
      </div>
      
      <div class="form-group">      
        <label for="contact_email">Email Address</label>
        <input type="text"
               name="contact[email]"
               id="contact_email"
               class="form-control">
        <br>
      </div>

      <div class="form-group">
        <label for="contact_message">Message</label>
        <br>
        <input type="textarea"
               name="contact[message]"
               id="contact_message"
               class="form-control">
        <br>
      </div>

      <button type="button" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <div class="col-xs-3 col-xs-push-3">
    <table class="table table-striped">
      <h2>Staff</h2>
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone Number</th>
        </tr> 
      </thead>

      <tbody>
        <% @staff.each do |person| %>
          <tr>
            <td><%= person.name %></td>
            <td><%= person.phone %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>