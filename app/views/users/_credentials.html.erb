<% action = type == "user" ? "user_url" : "session_url" %>
<% text = type == "user" ? "Create User!" : "Log in!" %>

<form action="/<%= type %>" method="POST">
  <%= auth_token %>
  
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <div class="form-group">
        <label for="user_username">Username</label>
        <input
          type="text"
          name="user[username]"
          id="user_username"
          value="<%= @user.username %>"
          class="form-control">
      </div>
    </div>
  </div> 

  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <div class="form-group">
        <label for="user_password">Password</label>
        <input type="password"
               name="user[password]"
               id="user_password"
               class="form-control">
      </div>
    </div>
  </div>

  <div clas="row">
    <div class="col-xs-4 col-xs-offset-1">
      <button class="btn btn-primary" type="submit"><%= text %></button>
    </div>
  </div>
</form>