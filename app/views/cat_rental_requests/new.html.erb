<h1>New Rental Request</h1>

<form action="/cat_rental_requests" method="post">
  <label for="cat_rental_request_name">Select Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_rental_request_name">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="cat_rental_request_start_date">Start Date</lable>
  <input type="date" name="cat_rental_request[start_date]" id="cat_rental_request_start_date">
  <br>

  <label for="cat_rental_request_end_date">End Date</lable>
  <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request_end_date">
  <br>

  <input type="submit" value="Create Request">
</form>
