<table>
  <thead>
    <tr>
      <% %w(name number).each do |col| %>
        <th><%= col %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% album.tracks.each do |track| %>
      <tr>
        <% %w(name song_number).each do |key| %>
          <% if key == "name" %>
            <td><%= link_to track.send(key), track_url(track) %>
          <% else %>
            <td><%= track.send(key) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>